{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {}
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:DEFAULT_RT_IMAGE",
              "createOptions": {
                "ExposedPorts": {
                  "9600/tcp": {}
                }
              }
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:DEFAULT_RT_IMAGE",
              "createOptions": {
                "HostConfig": {
                  "ExposedPorts": {
                    "9600/tcp": {}
                  },
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "Module": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULEDIR<../IoTEdge.Template>}",
              "createOptions": {
                "ExposedPorts": {
                  "9600/tcp": {}
                }
              }
            }
          },
          "Metrics": {
            "version": "1.0.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-metrics-collector",
              "createOptions": {},
              "env": {
                "MetricsEndpointsCSV": {
                  "value": "http://edgeHub:9600/metrics,http://edgeAgent:9600/metrics,http://Module:9600/metrics"
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.2",
        "routes": {
          "ModuleToHub": "FROM /messages/modules/Module/outputs/* INTO $upstream",
          "MetricsToHub": "FROM /messages/modules/Metrics/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}